<div class="border-show-div">
  <header>
    <h3 class="survey-title"><%= @survey.title %></h3>
  </header>
    <% if @survey.questions.any? %>
      <%= form_tag answers_path, method: :post do %>
        <%= hidden_field_tag 'survey_id', @survey.id %>
        <%= render @survey.questions %>

        <%= submit_tag 'Submit Survey', class: "btn btn-info btn-md btn-block"  %>
        <p><%= link_to "Cancel", surveys_path, class: "btn btn-secondary btn-md btn-block" %></p>
        <%= link_to "Delete", survey_path(@survey), :method => :delete,
                                              data: {confirm: "Are you sure you want to delete?"} %>
      <% end %>
    <% end %>
</div>
